#!/bin/sh
# Give dmenu list of all unicode characters to copy.
# Shows the selected character in dunst if running.

# Must have xclip installed to even show menu.
xclip -h >/dev/null || exit

if [ -e ~/.config/fontawesome ]; then
    chosen=$(grep -v "#" -h ~/.config/emoji ~/.config/fontawesome | dmenu -i -p "Selection:" -l 20)
else
    chosen=$(grep -v "#" ~/.config/emoji | dmenu -i -p "Selection:" -l 20)
fi

[ -z "$chosen" ] && exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | xclip -selection clipboard
dunstify -a "dmenu unicode" "Clipboard" "'$c' copied" &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$s" | tr -d '\n' | xclip
dunstify -a "dmenu unicode" "Primary" "'$s' copied" &
